<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdateAddressActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title="Edit Address" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSave"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Name"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:textColor="#3C3C3C"
                    android:hint="Receiver's Name"
                    android:textSize="15sp"
                    tools:text="Bhavik Maradiya" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Pincode"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etPincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="#3C3C3C"
                    android:hint="Pincode - 6 digits"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="360001" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Address"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:textColor="#3C3C3C"
                    android:hint="Address"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="Parsana nagar street no 3" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Landmark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etLandmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="#3C3C3C"
                    android:hint="Landmark"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="Junction" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="City"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#3C3C3C"
                    android:hint="City"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="Rajkot" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="State"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#3C3C3C"
                    android:hint="State"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="Gujarat" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Phone"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:textColor="#3C3C3C"
                    android:hint="Phone Number"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="9428*****0" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:background="#79CCCCCC" />


            <LinearLayout
                android:id="@+id/makeDefaultLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/oswaldmedium"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Use as Default"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/makeDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:gravity="end" />

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/checkoutbtnbg"
        android:fontFamily="@font/oswaldmedium"
        android:text="Save"
        android:textColor="#fff"
        android:textSize="17sp" />
</RelativeLayout>