<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingTop="2dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:fontFamily="@font/oswaldmedium"
                android:maxLines="1"
                android:text="Bhavik Maradiya"
                android:textColor="#313131"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:fontFamily="@font/oswaldregular"
                android:gravity="end"
                android:inputType="phone"
                android:maxLength="14"
                android:maxLines="1"
                android:paddingRight="7dp"
                android:textColor="#313131"
                android:textSize="15sp"
                tools:text="+91 9428798440" />

        </LinearLayout>


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/oswaldregular"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="Parsdfcnkdhfkndc jdbzdvddjscfsfhndsfhdnvfndjfvfndvj,\nkjdndl]\cdjjkdn\jdkndkndjdndjndjn\hbcbddfdfchdkfnd kfdjfhndkfhfdkfh\nParsdfcnkdhfkndc dfdfchdkfnd kfdjfhndkfhfdkfh\nParsdfcnkdhfkndc dfdfchdkfnd kfdjfhndkfhfdkfkjvdfjkdvkkfmdvjfjfjfjvfmmfvjffjffmjffvmvjfjfh"
            android:textColor="#4B4B4B"
            android:textSize="14.5sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:background="#99BEBEBE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/selectedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/defaultBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/radioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/checked"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_checkmark" />

                </LinearLayout>

                <TextView
                    android:id="@+id/defaultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/defaultBtn"
                    android:layout_toRightOf="@id/defaultBtn"
                    android:fontFamily="@font/oswaldregular"
                    android:gravity="center"
                    android:text="Use as default"
                    android:textColor="#4E4E4E"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/selectedLayout"
                android:layout_toRightOf="@id/selectedLayout"
                android:gravity="end"
                android:padding="3dp">

                <LinearLayout
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/oswaldregular"
                        android:text="Edit"
                        android:textAllCaps="true"
                        android:textColor="#7A7A7A"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_delete" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/oswaldregular"
                        android:text="Delete"
                        android:textAllCaps="true"
                        android:textColor="#7A7A7A"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>