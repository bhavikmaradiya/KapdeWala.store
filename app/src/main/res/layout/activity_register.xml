<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activity.RegisterActivity">


    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/oswaldbold"
            android:text="KapdeWala.com"
            android:textColor="#000"
            android:textSize="22sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswaldmedium"
                android:maxLines="1"
                android:text="Full Name"
                android:textColor="#969595"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g Adam"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:textColor="#000"
                android:textSize="20sp"
                android:textColorHint="#8D8B8B"
                android:theme="@style/MyEditTextTheme"
                tools:text="Bhavik Maradiya" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswaldmedium"
                android:maxLines="1"
                android:text="Email"
                android:textColor="#969595"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_UserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g abc@mail.com"
                android:textColor="#000"
                android:textSize="20sp"
                android:textColorHint="#8D8B8B"
                android:theme="@style/MyEditTextTheme"
                tools:text="bhavikmaradiya768@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswaldmedium"
                android:maxLines="1"
                android:text="Password"
                android:textColor="#969595"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_UserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="**********"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textSize="20sp"
                android:textColorHint="#8D8B8B"
                android:theme="@style/MyEditTextTheme" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswaldmedium"
                android:maxLines="1"
                android:text="Mobile No"
                android:textColor="#969595"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_UserNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="**********"
                android:textSize="20sp"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="#000"
                android:textColorHint="#8D8B8B"
                android:theme="@style/MyEditTextTheme" />

        </LinearLayout>

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnbg"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:padding="10dp"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/login"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</RelativeLayout>